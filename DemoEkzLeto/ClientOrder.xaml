<Window x:Class="DemoEkzLeto.ClientOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoEkzLeto"
        mc:Ignorable="d"
        Title="ClientOrder" Height="450" Width="800" WindowState="Maximized" Background="White">
    <Grid>
        <StackPanel>
            <StackPanel>
                <TextBlock Text="Бронирование услуг" FontWeight="Bold" HorizontalAlignment="Center" FontSize="30" VerticalAlignment="Top"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Foreground="#FF498C51" FontSize="25" x:Name="ServicesList"/>
                <TextBlock Margin="10,0,0,0" FontSize="20" Text="Введите длительность брони (в минутах):"/>
                <TextBox Margin="10,10,10,10" x:Name="OrderTime" Width="200" Height="30" FontSize="15" HorizontalAlignment="Left" BorderBrush="#FF76E383" BorderThickness="2"/>
                <Button FontSize="20" Margin="10,10,10,10" x:Name="Apply" Content="Принять" Width="125" HorizontalAlignment="Left" Click="Apply_Click" Height="41" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
